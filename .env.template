# Blog Backend Environment Configuration
# Copy this file to .env and fill in the required values

# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here_change_in_production
MONGO_DATABASE=blog

# Keycloak Configuration
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_AUTH_SERVER_URL=http://localhost:9000
KEYCLOAK_REALM=blog-realm
KEYCLOAK_CLIENT_ID=blog-client
KEYCLOAK_ISSUER_URI=http://localhost:9000/realms/blog-realm

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Production Database URI (for cloud deployment)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# SECURITY WARNING:
# - Change all default passwords before production deployment
# - Generate a strong JWT_SECRET using: openssl rand -base64 64
# - Never commit actual credentials to version control
